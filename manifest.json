{
  "manifest_version": 3,
  "name": "YTTV Seek",
  "version": "1.0.0",
  "description": "Adds configurable seek controls to YouTube TV (default: 5-second seek via Shift+J / Shift+L).",

  "icons": {
    "16":  "icons/icon-16.png",
    "48":  "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16":  "icons/icon-16.png",
      "48":  "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "*://tv.youtube.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://tv.youtube.com/*"],
      "js": ["content/seek-controller.js"],
      "css": ["content/seek-controller.css"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "yttv-seek@gormanity",
      "strict_min_version": "112.0"
    }
  }
}
